<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <co.intentservice.chatui.ChatView
        android:id="@+id/chat_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:backgroundColor="#f8f8f8"
        app:sendBtnBackgroundTint="@color/accent"
        app:bubbleBackgroundRcv="@color/primary"
        app:bubbleBackgroundSend="@color/accent"
        app:tStampTextColorSend="@color/black"
        app:sendBtnIconTint="#fff"/>

    <com.dd.processbutton.iml.SubmitProcessButton
        android:id="@+id/voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="22dp"
        android:padding="12dp"
        android:text="VOICEBOT"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>